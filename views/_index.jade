          a(href='javascript:void(0)'): i.icon.user
          ul.open
            li: a#signout(href='javascript:void(0)'): i.icon.power
        li#search: a(href='javascript:void(0)'): i.icon.search
      ul.nav.load

    nav
    article

    script#tp_void(type='text/template')
      div#error
        h1 x x
          h2 âŒ’
        p No content found.
    script#tp_list(type='text/template')
      a.list(href!='#<%= path %>', x-name!='<%= name %>', x-time!='<%= new Date(time).getTime() %>')
        .view
          <% if (mime == 'text/directory') { %>
          i.icon.folder_open
          <% } else if (/video/.test(mime)) { %>
          i.icon.facetime_video
          <% } else if (/audio/.test(mime)) { %>
          i.icon.music
          <% } else if (/image/.test(mime)) {%>
          i.icon.picture
          <% } else if (/pdf/.test(mime)) { %>
          i.icon.book_open
          <% } else if (/text/.test(mime)) { %>
          i.icon.notes
          <% } else { %>
          i.icon.file
          <% } %>
          img.lazy(src='', data-original!='<%= path %>.thumbnail', width='80px', height='80px')
        .name <%= name %>
        <% if (mime == 'text/directory') { %>
        .info
          span.size <%= size %> items
          span.time <%= moment(time).fromNow() %>
        <% } else { %>
        .info
          span.size <%= _.util.unitconv(size) %>
          span.time <%= moment(time).fromNow() %>
        <% } %>
    script#tp_file(type='text/template')
      .preview
        #error
          h1 under construction
        video(src!="<%= path %>", controls)
        audio(src!="<%= path %>", controls)
        div <%= mime %>
        a(href!="<%= path %>") preview
    script#tp_auth(type='text/template')
      form#auth(method='POST', action='/session')
        input#username(type='username', name='username', placeholder='username')
        input#password(type='password', name='password', placeholder='password')
        input(type='submit')

    script#tp_notify(type='text/template')
      .notify: .text(class!='<%= type %>') <%= text %>

